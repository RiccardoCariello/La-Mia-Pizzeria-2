@model List<DrinksModel>

<div class="container">

    <div class="row">
        
        @{
                
          
        
            foreach (DrinksModel drink in Model)
            {
                <div class="col">
                    
                    <div class="card">
                        <img src="@drink.ImgSource" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h4 class="card-title">@drink.Name</h4>
                            <h5 class="card-subtitle">@drink.Liters</h5>
                            <p class="card-text">@drink.Description</p>
                            <div class="card-footer">
                                    @drink.Price
                                <a class="btn btn-info btn-sm mx-2" href="@Url.Action("DrinkDetails", "Drinks", new { Id = drink.Id })">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-zoom-in" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                                        <path d="M10.344 11.742c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1 6.538 6.538 0 0 1-1.398 1.4z" />
                                        <path fill-rule="evenodd" d="M6.5 3a.5.5 0 0 1 .5.5V6h2.5a.5.5 0 0 1 0 1H7v2.5a.5.5 0 0 1-1 0V7H3.5a.5.5 0 0 1 0-1H6V3.5a.5.5 0 0 1 .5-.5z" />
                                    </svg>
                                </a>

                                @if (User.IsInRole("ADMIN"))
                                {
                                    <a class="btn btn-warning btn-sm mx-2" href="@Url.Action("Update", "Drinks", new { Id = drink.Id })">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-wrench-adjustable" viewBox="0 0 16 16">
                                            <path d="M16 4.5a4.492 4.492 0 0 1-1.703 3.526L13 5l2.959-1.11c.027.2.041.403.041.61Z" />
                                            <path d="M11.5 9c.653 0 1.273-.139 1.833-.39L12 5.5 11 3l3.826-1.53A4.5 4.5 0 0 0 7.29 6.092l-6.116 5.096a2.583 2.583 0 1 0 3.638 3.638L9.908 8.71A4.49 4.49 0 0 0 11.5 9Zm-1.292-4.361-.596.893.809-.27a.25.25 0 0 1 .287.377l-.596.893.809-.27.158.475-1.5.5a.25.25 0 0 1-.287-.376l.596-.893-.809.27a.25.25 0 0 1-.287-.377l.596-.893-.809.27-.158-.475 1.5-.5a.25.25 0 0 1 .287.376ZM3 14a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z" />
                                        </svg>
                                    </a>
                                    <form asp-controller="Drinks" asp-action="Delete" asp-route-id="@drink.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm mt-2 mx-2">

                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                            </svg>

                                        </button>
                                    </form>

                                }
                            </div>
                        </div>

                    </div>

                </div>
            }




            @if (User.IsInRole("ADMIN"))
            {
                <div class="row text-center align-content-center align-items-center">

                    <div class="col-12 text-center mt-3">
                        <a class="btn btn-primary" href="@Url.Action("Create", "Drinks")">
                            Crea nuovo Drink
                        </a>
                    </div>

                </div>
            }
        }
        
        


    </div>

</div>